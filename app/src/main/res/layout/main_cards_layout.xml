<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:tag="cards main container">

    <android.support.v7.widget.CardView
        android:id="@+id/main_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/main_appointment_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="25dp"
                android:textColor="@color/appointment_title_color"
                android:textSize="20sp"
                android:text="test title"/>

        <RelativeLayout
            android:id="@+id/main_cards_client_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_appointment_title"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/main_cards_client_icon"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginStart="-5dp"
                android:src="@mipmap/ic_human_female"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/main_appointment_client_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/main_cards_client_icon"
                android:textSize="18sp"
                android:text="test Client"
                android:layout_centerVertical="true"/>
            </RelativeLayout>


        <RelativeLayout
            android:id="@+id/main_cards_time_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_cards_client_layout"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/main_cards_time_icon"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginStart="-5dp"
                android:src="@mipmap/ic_calendar_clock"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/main_appointment_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/main_cards_time_icon"
                android:textSize="14sp"
                android:text="10:00 20/10/2016"
                android:textColor="@color/colorPrimary"
                android:layout_centerVertical="true"/>
            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>


